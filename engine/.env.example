# ============================================
# Kalshi Trading Engine - Environment Configuration
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to git

# ============================================
# GHOST API Authentication
# ============================================
# Generate a strong random key for API authentication
GHOST_API_KEY=ghost_prod_key_REPLACE_WITH_SECURE_RANDOM

# Password for production mode authentication (optional)
# If not set, defaults to "993728" for development
# For production, set a strong unique password
AUTH_PASSWORD=993728

# ============================================
# Kalshi API Configuration (DEMO Mode)
# ============================================
KALSHI_DEMO_KEY_ID=your-demo-key-id
KALSHI_DEMO_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----
YOUR_DEMO_PRIVATE_KEY_HERE
-----END RSA PRIVATE KEY-----"

# Production Kalshi (only used when IS_PRODUCTION=true)
KALSHI_PROD_KEY_ID=your-prod-key-id
KALSHI_PROD_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----
YOUR_PROD_PRIVATE_KEY_HERE
-----END RSA PRIVATE KEY-----"

# ============================================
# Supabase Database Configuration
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# ============================================
# AI Service API Keys
# ============================================
# Google AI Studio (Gemini)
GEMINI_API_KEY=your-gemini-api-key

# OpenRouter (optional)
OPENROUTER_API_KEY=your-openrouter-api-key

# Groq (optional)
GROQ_API_KEY=your-groq-api-key

# ============================================
# External Services
# ============================================
# RapidAPI - only needed for external odds comparison (optional)
RAPID_API_KEY=your-rapidapi-key
NTFY_TOPIC=kalshi-alerts

# ============================================
# Trading Configuration
# ============================================
# Set to "true" for production trading (uses real money)
IS_PRODUCTION=false

# Vault settings (in cents)
VAULT_PRINCIPAL_CENTS=30000
VAULT_PROFIT_THRESHOLD_CENTS=5000

# Emergency kill switch (set to "true" to halt all trading)
KILL_SWITCH=false

# ============================================
# Frontend Configuration
# ============================================
FRONTEND_ORIGIN=http://localhost:3000
