{
  "name": "kalshi-sentient-alpha-root",
  "private": true,
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.7",
    "prettier": "^3.2.5"
  },
  "scripts": {
    "build:backend": "cd backend && npm install && npm run build",
    "build:frontend": "cd frontend && npm install && npm run build",
    "build": "npm run build:backend && npm run build:frontend",
    "start": "npx pm2 start ecosystem.config.cjs",
    "stop": "npx pm2 stop all",
    "logs": "npx pm2 logs",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"python3 engine/main.py\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "lint": "eslint . --ext .ts,.tsx --fix && cd engine && python3 -m ruff check . --fix && python3 -m black .",
    "lint:frontend": "cd frontend && eslint src --ext .ts,.tsx --fix",
    "lint:backend": "cd backend && eslint src --ext .ts,.tsx --fix",
    "lint:engine": "cd engine && python3 -m ruff check . --fix",
    "format": "prettier --write . && cd engine && python3 -m black .",
    "format:frontend": "cd frontend && prettier --write src/**/*.{ts,tsx}",
    "format:backend": "cd backend && prettier --write src/**/*.{ts,tsx}",
    "format:engine": "cd engine && python -m black .",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm run test",
    "test:frontend": "cd frontend && npm run test",
    "prepare": "husky install"
  }
}
